<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="true"
         bootstrap="Tests/bootstrap.php"
        >
    <php>
        <ini name="memory_limit" value="-1"/>
        <ini name="display_errors" value="1"/>
        <ini name="error_reporting" value="-1"/>
    </php>

    <testsuites>
        <testsuite name="Logger">
            <directory>./Tests/Cases/</directory>
            <directory>./Tests/Cases/Target/</directory>
        </testsuite>
    </testsuites>

    <groups>
        <exclude>
            <group>benchmark</group>
        </exclude>
    </groups>

    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="docs/phpunit/clover.xml"/>
        <log type="junit" target="docs/phpunit/junit.xml" logIncompleteSkipped="false"/>
        <log type="testdox-html" target="docs/phpunit/testdox.html"/>

        <!-- use this for generate html report -->
        <log type="coverage-html" target="docs/phpunit/coverage" charset="UTF-8" yui="true" highlight="true" lowUpperBound="50" highLowerBound="80"/>

        <!--<log type="testdox-html" target="./log/testdox.html" />-->
    </logging>
</phpunit>
